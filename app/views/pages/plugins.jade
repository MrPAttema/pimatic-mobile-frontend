script#plugin-template(type='text/template')
  li
    a(href='#')
      label
        h2
          span.name
          | 
          span.version
          | 
          span.active=__('active')
          | 
          span.update-available=__('update available')
        //-p
        //-  a.homepage(data-role="none")
        p.description
        input(type='checkbox')
script#plugin-browse-template(type='text/template')
  li
    a(href='#')
      label
        h2
          span.name
          | 
          span.version
          | 
          span.installed=__('installed')
          | 
          span.active=__('active')
        //-p
        //-  a.homepage(data-role="none")
        p.description
    a.add-to-config()=__('Add')
script#loading-template(type='text/template')
  li.loading=__('Loading') + "..."

div#plugins-page(data-role='page')
  div(data-theme=theme.headerSwatch, data-role='header')
    a(href='#index', data-role='button', data-icon='arrow-l', data-iconpos='left', 
      data-inline='true', data-transition="slidefade", data-direction="reverse")=__('Back')
    <!-- ko if: $root.hasPermission('plugins', 'write') -->
    a.restart-now(data-role="button", data-icon="refresh",  data-iconpos='left', data-inline="true")=__('Restart')
    <!-- /ko -->
    h3=__('Installed Plugins')
  div.ui-content.overthrow
    form
      ul#plugin-list.checkbox-list(data-role='listview', data-inset='true')
      <!-- ko if: $root.hasPermission('plugins', 'write') -->
      .ui-field-contain.ui-grid-a
        div.ui-block-a
          select#select-plugin-action(name='select-plugin-action')
            option(value="select")=__('Select an action')
            option(value="add")=__('Add to config')
            option(value="remove")=__('Remove from config')
        div.ui-block-b
          a#plugin-do-action(data-icon="arrow-r", data-theme="a", data-role="button")=__('Do it!')
      .ui-field-contain
          a#plugin-install(href="#plugins-browse", data-icon="plus", data-role="button")=__('Install a Plugin')
      <!-- /ko -->
div#plugins-browse(data-role='page')
  div(data-theme=theme.headerSwatch, data-role='header')
    a(href='#plugins-page', data-role='button', data-icon='arrow-l', data-iconpos='left', data-inline='true', data-transition="slidefade")=__('Back')
    h3=__('Install a Plugins')
  div.ui-content.overthrow
    form
      ul#plugin-browse-list(data-role='listview', data-split-icon="plus", data-inset="true")
